                  <Font name="Segoe UI" size="15.0" />
               </font>
               <effect>
                  <Blend mode="DARKEN" />
               </effect>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onStartNewGame" prefHeight="43.0" prefWidth="155.0" stylesheets="@../css/buttons.css" text="Zen Mode">
