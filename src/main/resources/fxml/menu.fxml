                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/addUserIcon.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <HBox.margin>
                              <Insets left="30.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <HBox fx:id="selectUserMessage" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" visible="false">
                     <children>
                        <Label text="Please select an user: ">
                           <font>
                              <Font name="Segoe UI Semibold" size="28.0" />
                           </font>
                        </Label>
                        <ChoiceBox fx:id="userChoiceBox" prefHeight="30.0" prefWidth="130.0" style="-fx-background-color: #ffb347;" />
