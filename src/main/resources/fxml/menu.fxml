<Pane prefHeight="500.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controller.MenuController">
   <children>
      <ImageView fitHeight="500.0" fitWidth="780.0" opacity="0.4">
         <image>
            <Image url="@../images/menubackground.jpg" />
         </image>
      </ImageView>
      <Label alignment="TOP_CENTER" layoutX="250.0" layoutY="124.0" text="QUICK, DRAW!" textAlignment="CENTER">
         <font>
            <Font name="Segoe UI Black" size="38.0" />
         </font>
         <effect>
            <Blend />
         </effect>
      </Label>
      <Button id="button" alignment="CENTER" layoutX="318.0" layoutY="229.0" mnemonicParsing="false" onAction="#onStartNewGame" prefHeight="43.0" prefWidth="144.0" stylesheets="@../css/buttons.css" text="Start New Game">
         <font>
            <Font name="Segoe UI" size="15.0" />
         </font>
         <effect>
            <Blend mode="DARKEN" />
         </effect>
      </Button>
      <Label layoutX="14.0" layoutY="19.0" text="Current User : ">
         <font>
            <Font name="System Bold" size="18.0" />
