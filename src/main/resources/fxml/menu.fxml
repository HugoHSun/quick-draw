                        <Label alignment="CENTER" text="Welcome Back,">
                           <font>
                              <Font name="Segoe UI Semibold" size="28.0" />
                           </font>
                        </Label>
                        <Label fx:id="currentUser" alignment="CENTER" style="-fx-text-fill: ff9e14;" text="Label">
                           <font>
                              <Font name="Segoe UI Black" size="28.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </StackPane>
            <Button fx:id="startGameButton" alignment="CENTER" mnemonicParsing="false" onAction="#onStartNewGame" prefHeight="43.0" prefWidth="155.0" stylesheets="@../css/buttons.css" text="Start New Game">
