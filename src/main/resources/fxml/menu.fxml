      <Label fx:id="currentUser" layoutX="136.0" layoutY="15.0" text="Label">
         <font>
            <Font name="System Bold" size="24.0" />
         </font></Label>
      <ChoiceBox fx:id="userChoiceBox" layoutX="584.0" layoutY="112.0" prefHeight="35.0" prefWidth="150.0" />
      <Button layoutX="650.0" layoutY="20.0" mnemonicParsing="false" onAction="#onAddUser" prefHeight="35.0" prefWidth="84.0" text="Add User" />
      <Button layoutX="598.0" layoutY="65.0" mnemonicParsing="false" onAction="#onDeleteUser" prefHeight="35.0" prefWidth="136.0" text="Delete Current User" />
      <Button layoutX="34.0" layoutY="440.0" mnemonicParsing="false" onAction="#onStatistics" text="Statistics" />
   </children>
</Pane>
